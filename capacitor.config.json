{
  "appId": "com.nanonebula.backstage",
  "appName": "BackStageBuddy",
  "webDir": "www",
  "bundledWebRuntime": true,
  "allowMixedContent": false,
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 9000,   
      "launchAutoHide": false, 
      "backgroundColor": "#3E1821",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": true,
      "splashFullScreen": true,
      "splashImmersive": true
    }
  },
  "ios": {
    "scheme": "BackStageBuddy"
  },
  "android": {
    "allowMixedContent": false
  },
  "server": {
    "url": "http://192.168.0.111:81/", 
    "cleartext": true
  }
}
